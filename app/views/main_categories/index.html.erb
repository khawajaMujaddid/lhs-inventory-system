<div id="content" class="bg-white/10 col-span-9 rounded-lg p-6">
  <div class="flex justify-between">
    <div class="text-2xl text-white font-bold">All Categories</div>
    <div>
      <%= link_to new_main_category_path, class:'group rounded-2xl h-12 p-4 w-48 bg-green-500 font-bold text-md text-white relative overflow-hidden' do %>
        Add New Category
        <div class="absolute duration-300 inset-0 w-full h-full transition-all scale-0 group-hover:scale-100 group-hover:bg-white/30 rounded-2xl">
        </div>
      <% end %>
    </div>
  </div>
  <div class="mt-5 ml-8 text-lg text-white flex items-start flex-col">
    <%= render @categories %>
  </div>
</div>
