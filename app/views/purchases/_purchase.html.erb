<tr class="border-b border-gray-700">
  <td class="py-3 px-2 font-bold">
    <div class="inline-flex space-x-3 items-center">
      <span><%= purchase.product.name.humanize %></span>
    </div>
  </td>
  <td class="py-3 px-2"><%= purchase.price %></td>
  <td class="py-3 px-2"><%= purchase.quantity %></td>
  <td class="py-3 px-2"><%= purchase.date_purchased %></td>
  <td class="py-3 px-2">
    <div class="inline-flex items-center space-x-3">
      <%= link_to edit_purchase_path(purchase), title: 'Edit', class: 'hover:text-white' do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
        </svg>
      <% end %>
      <%#= link_to product_path(product), title: 'View Product', class: 'hover:text-white' do %>
        <%# <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
          <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/> <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
        </svg> %>
        <%#  end %>
        <%= link_to purchase_path(purchase), title: 'Delete Product', class: 'hover:text-white', data: { "turbo-method": :delete } do %>
          <svg viewBox="0 0 1024 1024" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor">
            <path fill="currentColor" d="M352 192V95.936a32 32 0 0 1 32-32h256a32 32 0 0 1 32 32V192h256a32 32 0 1 1 0 64H96a32 32 0 0 1 0-64h256zm64 0h192v-64H416v64zM192 960a32 32 0 0 1-32-32V256h704v672a32 32 0 0 1-32 32H192zm224-192a32 32 0 0 0 32-32V416a32 32 0 0 0-64 0v320a32 32 0 0 0 32 32zm192 0a32 32 0 0 0 32-32V416a32 32 0 0 0-64 0v320a32 32 0 0 0 32 32z"/>
          </svg>
        <% end %>
      </div>
    </td>
  </tr>
